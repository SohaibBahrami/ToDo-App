<% layout('layouts/boilerplate') %>
<head>
  <link rel="stylesheet" href="/stylesheets/home.css" />
</head>
<main
  class="container d-flex flex-column align-items-center justify-content-center flex-nowrap"
  style="height: 75vh; width: 50vw"
>
  <h1>Login</h1>
  <form action="/login" method="post" class="validated-from" novalidate>
    <div class="mb-3">
      <input type="hidden" name="referer" value="<%= referer %>" />
      <label class="form-label" for="username">Username:</label>
      <input
        class="form-control"
        id="username"
        type="text"
        name="username"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="mb-3">
      <label class="form-label" for="password">Password:</label>
      <input
        class="form-control"
        id="password"
        type="password"
        name="password"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <button class="btn btn-success">Login</button>
  </form>
</main>
